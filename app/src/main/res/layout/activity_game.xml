<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b">

    <!-- 游戏视图 - 占据整个屏幕 -->
    <com.example.towerdefense.view.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 资源显示 - 左上角 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/floating_panel_bg"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:layout_margin="16dp"
        android:layout_gravity="top|start">

        <!-- 人力显示 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_manpower"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvManpower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/init_manpower"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 补给显示 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_supply"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvSupply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/init_supply"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- 设置按钮 - 右上角 -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_gravity="top|end"
        android:src="@drawable/ic_settings"
        android:background="@drawable/floating_button_bg"
        android:contentDescription="@string/settings"
        android:scaleType="centerInside"
        app:tint="@android:color/white" />
    <!-- ========== 建造模式主按钮 ========== -->
    <ImageButton
        android:id="@+id/btnBuildMode"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_deploy"
        android:background="@drawable/floating_button_bg"
        android:contentDescription="@string/deploy"
        android:scaleType="centerInside"
        app:tint="@android:color/white" />

    <!-- ========== 建造菜单 - 默认隐藏 ========== -->
    <LinearLayout
        android:id="@+id/buildMenuLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/floating_panel_bg"
        android:padding="12dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|center_horizontal"
        android:visibility="gone">

        <!-- 弓箭塔按钮 -->
        <ImageButton
            android:id="@+id/btnArcherTower"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_infantry"
            android:background="@drawable/floating_button_bg"
            android:contentDescription="@string/infantry"
            android:scaleType="centerInside"
            app:tint="@android:color/white" />

        <!-- 炮塔按钮 -->
        <ImageButton
            android:id="@+id/btnCannonTower"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_grenadier"
            android:background="@drawable/floating_button_bg"
            android:contentDescription="@string/Grenadier"
            android:scaleType="centerInside"
            app:tint="@android:color/white" />

        <!-- 法师塔按钮 -->
        <ImageButton
            android:id="@+id/btnMageTower"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_artillery"
            android:background="@drawable/floating_button_bg"
            android:contentDescription="@string/artillery"
            android:scaleType="centerInside"
            app:tint="@android:color/white" />
        <!-- 移除按钮 -->
        <ImageButton
            android:id="@+id/btnBuildRemove"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_build_remove"
            android:background="@drawable/floating_button_bg"
            android:contentDescription="@string/build_remove"
            android:scaleType="centerInside"
            app:tint="@android:color/white" />

    </LinearLayout>
    <include layout="@layout/tutorial_overlay" />
</FrameLayout>