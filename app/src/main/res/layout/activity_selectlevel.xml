<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 背景图 -->

    <!-- 返回按钮 -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/level_select"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="344dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/BacktoMain"
        android:src="@drawable/back_to_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 训练关卡按钮 -->

    <!-- 关卡1按钮 -->

    <!-- 关卡2按钮 -->

    <ImageButton
        android:id="@+id/btn_train"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/tut_level_button_selector"
        android:contentDescription="@string/level_train"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_level01"
        android:layout_width="166dp"
        android:layout_height="51dp"
        android:layout_marginStart="420dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/level01_button_selector"
        android:contentDescription="@string/level_01"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_level02"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="240dp"
        android:background="@drawable/level02_button_selector"
        android:contentDescription="@string/level_02"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>